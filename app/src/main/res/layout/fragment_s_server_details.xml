<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_background"
    tools:context=".activity.settings.server.S_ServerDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="16dp"
                app:contentInsetEnd="16dp"
                style="@style/Theme.MyCustomToolbar">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/iv_BackArrow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/ic_back_arrow"/>

                    <TextView
                        android:id="@+id/tv_PageCaption"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/server_page_caption"
                        style="@style/Theme.MyCustomToolbarText"
                        android:gravity="center"/>


                    <ImageView
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:foregroundGravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/ic_back_arrow"/>

                </TableRow>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ActivityTopMarginStyle"
            android:layout_below="@+id/appBar">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/cardview_background_color_light_blue"
                        app:cardMaxElevation="5dp">

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_AccountPreference"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"
                            android:padding="5dp">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/server_name"
                                    android:textSize="@dimen/text_size_normal"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:id="@+id/tv_PropertyName"
                                    android:layout_weight="1.5"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textColor="@color/tv_text_color"
                                    android:fontFamily="@font/inter_bold"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/server_id"
                                    android:textSize="@dimen/text_size_normal"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:id="@+id/tv_PropertyID"
                                    android:layout_weight="1.5"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textColor="@color/tv_text_color"
                                    android:fontFamily="@font/inter_bold"/>

                            </TableRow>

                            <TableRow
                                android:id="@+id/tr_UnitName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/server_unit_name"
                                    android:textSize="@dimen/text_size_normal"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:id="@+id/tv_UnitName"
                                    android:layout_weight="1.5"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textColor="@color/tv_text_color"
                                    android:fontFamily="@font/inter_bold"/>

                            </TableRow>

                            <TableRow
                                android:id="@+id/tr_UnitID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/server_unit_id"
                                    android:textSize="@dimen/text_size_normal"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:id="@+id/tv_UnitID"
                                    android:layout_weight="1.5"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textColor="@color/tv_text_color"
                                    android:fontFamily="@font/inter_bold"/>

                            </TableRow>

                            <TableRow
                                android:id="@+id/tr_Country"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/server_country"
                                    android:textSize="@dimen/text_size_normal"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:id="@+id/tv_Country"
                                    android:layout_weight="1.5"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textColor="@color/tv_text_color"
                                    android:fontFamily="@font/inter_bold"/>

                            </TableRow>

                            <TableRow
                                android:id="@+id/tr_AddressLine1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/server_address_line_1"
                                    android:textSize="@dimen/text_size_normal"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:id="@+id/tv_AddressLine1"
                                    android:layout_weight="1.5"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textColor="@color/tv_text_color"
                                    android:fontFamily="@font/inter_bold"/>

                            </TableRow>

                            <TableRow
                                android:id="@+id/tr_AddressLine2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/server_address_line_2"
                                    android:textSize="@dimen/text_size_normal"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/inter_regular"/>

                                <TextView
                                    android:id="@+id/tv_AddressLine2"
                                    android:layout_weight="1.5"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textColor="@color/tv_text_color"
                                    android:fontFamily="@font/inter_bold"/>

                            </TableRow>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>