<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    tools:context=".activity.settings.S_SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="16dp"
                app:contentInsetEnd="16dp"
                style="@style/Theme.MyCustomToolbar">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <ImageView
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:id="@+id/iv_BackArrow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/settings_page_caption"
                        style="@style/Theme.MyCustomToolbarText"
                        android:gravity="center|left"/>

                    <ImageView
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:id="@+id/iv_ScanServerDetails"
                        android:foregroundGravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/ic_back_arrow"/>

                </TableRow>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ActivityTopMarginStyle"
            android:layout_below="@+id/appBar">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tr_SaveDelete"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_account_preference"
                            android:textSize="@dimen/text_size_normal"
                            android:layout_marginLeft="20dp"
                            android:gravity="center|left"
                            android:fontFamily="@font/inter_regular"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginTop="10dp"
                            app:cardMaxElevation="5dp">

                            <LinearLayout
                                android:id="@+id/ll_AccountPreference"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:background="#FFFFFF"
                                android:padding="5dp">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_weight="0.1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_account_settings"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_weight="0.8"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:orientation="vertical"
                                            android:layout_margin="2dp"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/settings_update_contact_details"
                                                android:textSize="@dimen/text_size_normal"
                                                android:textColor="@color/tv_text_color"
                                                android:gravity="center|left"
                                                android:fontFamily="@font/inter_bold"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:orientation="vertical"
                                            android:layout_margin="2dp"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/settings_update_contact_details_details"
                                                android:textSize="@dimen/text_size_small"
                                                android:gravity="center|left"
                                                android:fontFamily="@font/inter_regular"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_weight="0.1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_right_arrow"/>

                                    </LinearLayout>

                                </TableRow>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_security"
                            android:textSize="@dimen/text_size_normal"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center|left"
                            android:fontFamily="@font/inter_regular"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginTop="10dp"
                            app:cardMaxElevation="5dp">

                            <LinearLayout
                                android:id="@+id/ll_Security_Pin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:background="#FFFFFF"
                                android:padding="5dp">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_weight="0.1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_account_settings"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_weight="0.8"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:orientation="vertical"
                                            android:layout_margin="2dp"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/settings_security_pin"
                                                android:textSize="@dimen/text_size_normal"
                                                android:textColor="@color/tv_text_color"
                                                android:gravity="center|left"
                                                android:fontFamily="@font/inter_bold"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:orientation="vertical"
                                            android:layout_margin="2dp"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/settings_security_pin_details"
                                                android:textSize="@dimen/text_size_small"
                                                android:gravity="center|left"
                                                android:fontFamily="@font/inter_regular"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_weight="0.1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_right_arrow"/>

                                    </LinearLayout>

                                </TableRow>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginTop="20dp"
                            app:cardMaxElevation="5dp">

                            <LinearLayout
                                android:id="@+id/ll_Security"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:background="#FFFFFF"
                                android:padding="5dp">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_weight="0.1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_account_settings"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_weight="0.8"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:orientation="vertical"
                                            android:layout_margin="2dp"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/settings_change_password"
                                                android:textSize="@dimen/text_size_normal"
                                                android:textColor="@color/tv_text_color"
                                                android:gravity="center|left"
                                                android:fontFamily="@font/inter_bold"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:orientation="vertical"
                                            android:layout_margin="2dp"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/settings_change_password_details"
                                                android:textSize="@dimen/text_size_small"
                                                android:gravity="center|left"
                                                android:fontFamily="@font/inter_regular"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_weight="0.1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_right_arrow"/>

                                    </LinearLayout>

                                </TableRow>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_server"
                            android:textSize="@dimen/text_size_normal"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center|left"
                            android:fontFamily="@font/inter_regular"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginTop="10dp"
                            app:cardMaxElevation="5dp">

                            <LinearLayout
                                android:id="@+id/ll_Server"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:background="#FFFFFF"
                                android:padding="5dp">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_weight="0.1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_account_settings"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_weight="0.8"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:orientation="vertical"
                                            android:layout_margin="2dp"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/settings_server_details"
                                                android:textSize="@dimen/text_size_normal"
                                                android:textColor="@color/tv_text_color"
                                                android:gravity="center|left"
                                                android:fontFamily="@font/inter_bold"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:orientation="vertical"
                                            android:layout_margin="2dp"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/settings_server_details_info"
                                                android:textSize="@dimen/text_size_small"
                                                android:gravity="center|left"
                                                android:fontFamily="@font/inter_regular"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_weight="0.1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_right_arrow"/>

                                    </LinearLayout>

                                </TableRow>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>

            <TableRow
                android:id="@+id/tr_SaveDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|bottom">

                    <Button
                        android:id="@+id/btn_LogOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_log_out"
                        android:textColor="@color/btn_background_black_text_color"
                        android:background="@drawable/rectangle_shape"
                        app:backgroundTint="@color/btn_background_black"
                        android:fontFamily="@font/inter_regular"/>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/tv_AppVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="@string/settings_app_version"
                            android:textSize="10sp"
                            android:fontFamily="@font/inter_regular"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_copy_rights"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginRight="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="@string/settings_developed_by"
                            android:textSize="10sp"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/inter_regular"/>

                    </TableRow>

                </LinearLayout>

            </TableRow>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>