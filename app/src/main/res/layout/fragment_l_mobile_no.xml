<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_2"
    tools:context=".activity.login.fragment.L_MobileNoFragment">

    <RelativeLayout
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:windowSoftInputMode="adjustPan"
        android:layout_below="@+id/appBar">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/login_mobile_no"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/tv_text_color_grey"
                        android:padding="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/inter_regular"/>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/countryCodePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_normal"
                            app:ccp_showFlag="true"
                            app:ccp_showNameCode="false"
                            app:ccp_countryPreference="SG,MY,CN"
                            app:ccp_defaultNameCode="SG"
                            android:layout_marginRight="5dp"
                            app:ccpDialog_showCloseIcon="true"
                            android:background="@drawable/rectangle_shape"
                            android:backgroundTint="@color/et_background_color"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_MobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            app:hintAnimationEnabled="false"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/et_MobileNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_normal"
                                android:background="@drawable/rectangle_shape"
                                android:backgroundTint="@color/et_background_color"
                                android:padding="10dp"
                                android:layout_marginLeft="5dp"
                                android:inputType="number"
                                android:digits="0123456789"
                                android:maxLength="12"
                                android:textColorHint="@color/et_hint_text_color"
                                android:fontFamily="@font/inter_regular"
                                android:singleLine="true"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/login_mobile_no_password"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/tv_text_color_grey"
                        android:padding="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/inter_regular"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:hintAnimationEnabled="false"
                        app:errorEnabled="true"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleDrawable="@drawable/eye_password">

                        <EditText
                            android:id="@+id/et_Password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_normal"
                            android:background="@drawable/rectangle_shape"
                            android:backgroundTint="@color/et_background_color"
                            android:padding="10dp"
                            android:inputType="textPassword"
                            android:textColorHint="@color/et_hint_text_color"
                            android:fontFamily="@font/inter_regular"
                            android:singleLine="true"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_ForgotPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_email_password_forgot"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/colorPrimary"
                            android:padding="10dp"
                            android:fontFamily="@font/inter_regular"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_Or"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_email_or"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/tv_text_color_grey"
                            android:fontFamily="@font/inter_regular"/>

                        <TextView
                            android:visibility="invisible"
                            android:id="@+id/tv_UsePIN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_email_use_pin"
                            android:textSize="@dimen/text_size_normal"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/inter_regular"/>

                        <TextView
                            android:visibility="invisible"
                            android:id="@+id/tv_Or_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_email_or"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/tv_text_color_grey"
                            android:fontFamily="@font/inter_regular"/>

                        <TextView
                            android:visibility="invisible"
                            android:id="@+id/tv_UseBiometric"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/login_email_use_biometric"
                            android:textSize="@dimen/text_size_normal"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/inter_regular"/>

                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp">

                    <Button
                        android:id="@+id/btn_Next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/login_mobile_no_next"
                        android:textColor="@color/btn_background_text_color"
                        android:background="@drawable/rectangle_shape"
                        android:backgroundTint="@color/btn_background"
                        android:fontFamily="@font/inter_regular"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>