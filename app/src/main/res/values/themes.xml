<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VMS_Host_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Theme_1" parent="Base.Theme.VMS_Host_App" >

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/status_bar_color</item>
<!--        Set it to true for dark text and icons on a light status bar background.-->
<!--        Set it to false (or omit it) for light text and icons on a dark status bar background.-->
        <item name="android:windowLightStatusBar">true</item>

    </style>

<!--    Toolbar-->
    <style name="Theme.MyCustomToolbar" parent="Base.Theme.VMS_Host_App" >

        <item name="android:background">@color/toolbar_background</item>

    </style>
    <style name="Theme.MyCustomToolbar_White" parent="Base.Theme.VMS_Host_App" >

        <item name="android:background">@color/toolbar_background_white</item>

    </style>

    <style name="Theme.MyCustomToolbarText" parent="Base.Theme.VMS_Host_App" >

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/toolbar_text_color</item>

    </style>

    <!--    Toolbar-->

<!--    BottomNavigationView-->
    <style name="MyCustomBottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="MyCustomBottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
<!--    BottomNavigationView-->

<!--    FloatingActionButton-->
    <style name="fab_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--    FloatingActionButton-->

<!--    SearchView-->
    <style name="MySearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/round_shape</item>
        <item name="android:backgroundTint">@color/searchview_background_color</item>
    </style>
    <!--    SearchView-->

<!--    Activity Top Margin Style-->
    <style name="ActivityTopMarginStyle" parent="">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
<!--    Activity Top Margin Style-->

</resources>